<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.flash.project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        //record
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
        <uses-permission android:name="android.permission.RECORD_AUDIO"/>
        //record
        <activity
            android:name=".main_Activity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".chooseGameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_choose_game"
            android:theme="@style/FullscreenTheme" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".NumActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_num"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".gameOverActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_game_over"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".lettersActivity"
            android:label="@string/title_activity_letters"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".coloursActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_colours"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".sumsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_shapes"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".recordActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_record"
            android:theme="@style/FullscreenTheme">

            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
            <uses-permission android:name="android.permission.RECORD_AUDIO"/>
        </activity>
    </application>

</manifest>
